{
  "compilerOptions": {
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "newLine": "LF",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "esm",
    "rootDir": "ts",
    "strict": true,
    "target": "ES2020"
  },
  "include": [
    "ts",
    "typings"
  ],
  "references": [
    {
      "path": "../clibuilder"
    }
  ]
}
