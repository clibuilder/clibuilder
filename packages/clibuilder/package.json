{
  "name": "clibuilder",
  "version": "8.0.3",
  "description": "A CLI building library",
  "keywords": [
    "builder",
    "cli",
    "command",
    "parser"
  ],
  "homepage": "https://github.com/unional/clibuilder",
  "bugs": {
    "url": "https://github.com/unional/clibuilder/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unional/clibuilder.git"
  },
  "license": "MIT",
  "author": {
    "name": "Homa Wong (unional)",
    "email": "homawong@gmail.com",
    "url": "https://github.com/unional"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    "import": "./esm/index.js",
    "require": "./cjs/index.js",
    "default": "./esm/index.js",
    "types": "./esm/index.d.ts"
  },
  "typings": "./lib/index.d.ts",
  "files": [
    "cjs",
    "esm",
    "ts",
    "!*.spec.*",
    "!*.tsbuildinfo"
  ],
  "scripts": {
    "build": "run-p build:cjs build:esm",
    "build:cjs": "esbuild ts/index.ts --bundle --platform=node --outfile=cjs/index.js && ncp package.cjs.json cjs/package.json",
    "build:esm": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf .nyc_output .ts coverage cjs esm lib libm",
    "coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "depcheck": "depcheck",
    "lint": "eslint --ext=js,ts .",
    "nuke": "run-s clean && rimraf node_modules",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "verify": "npm-run-all clean -p build lint coverage depcheck",
    "watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --watch"
  },
  "dependencies": {
    "@types/node": "^18.0.0",
    "find-installed-packages": "^3.0.1",
    "find-up": "^6.3.0",
    "js-yaml": "^4.1.0",
    "pad-right": "^0.2.2",
    "search-packages": "^2.1.0",
    "standard-log": "^11.2.1",
    "standard-log-color": "^11.2.1",
    "tmp": "^0.2.1",
    "tslib": "^2.4.0",
    "type-plus": "^4.14.1",
    "wordwrap": "^1.0.0",
    "zod": "^3.19.0"
  },
  "devDependencies": {
    "@babel/core": "^7.19.0",
    "@types/jest": "^29.0.0",
    "@types/js-yaml": "^4.0.5",
    "@types/tmp": "^0.2.3",
    "@types/wordwrap": "github:types/wordwrap",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "@unional/fixture": "^3.2.1",
    "assertron": "^10.0.0",
    "babel-jest": "^29.0.0",
    "bad-plugin": "workspace:*",
    "bad-plugin-no-index": "workspace:*",
    "cjs-plugin": "workspace:*",
    "clibuilder-plugin-dummy": "^1.0.1",
    "cross-env": "^7.0.3",
    "depcheck": "^1.4.3",
    "esbuild": "^0.15.7",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-harmony": "^7.1.0",
    "esm-plugin": "workspace:*",
    "jest": "^29.0.0",
    "jest-validate": "^29.0.0",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config": "^2.0.1",
    "jest-watch-typeahead": "^2.1.1",
    "ncp": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "path-equal": "^1.2.2",
    "plugin-two": "workspace:*",
    "rimraf": "^3.0.2",
    "tersify": "^3.10.5",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.2"
  },
  "engines": {
    "node": ">= 8"
  }
}
