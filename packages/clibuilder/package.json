{
  "name": "clibuilder",
  "version": "7.2.1",
  "description": "A CLI building library",
  "keywords": [
    "builder",
    "cli",
    "command",
    "parser"
  ],
  "homepage": "https://github.com/unional/clibuilder",
  "bugs": {
    "url": "https://github.com/unional/clibuilder/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unional/clibuilder.git"
  },
  "license": "MIT",
  "author": {
    "name": "Homa Wong (unional)",
    "email": "homawong@gmail.com",
    "url": "https://github.com/unional"
  },
  "sideEffects": false,
  "type": "module",
  "exports": "./esm/index.js",
  "types": "./esm/index.d.ts",
  "files": [
    "esm",
    "ts",
    "!*.spec.*"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf .nyc_output .ts coverage lib libm esm",
    "coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage --maxWorkers=60%",
    "depcheck": "depcheck",
    "lint": "eslint --ext=js,ts .",
    "nuke": "yarn clean && rimraf node_modules",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --maxWorkers=60%",
    "test:watch": "jest --watch --maxWorkers=60%",
    "verify": "npm-run-all clean -p build lint coverage depcheck",
    "watch": "yarn test:watch"
  },
  "dependencies": {
    "@types/node": "^16.11.48",
    "chalk": "^5.0.1",
    "find-installed-packages": "^2.1.6",
    "find-up": "^5.0.0",
    "pad-right": "^0.2.2",
    "search-packages": "^2.1.0",
    "standard-log": "^9.1.7",
    "standard-log-color": "^7.0.2",
    "tslib": "^2.4.0",
    "type-plus": "^4.11.1",
    "wordwrap": "^1.0.0",
    "zod": "^3.18.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.6",
    "@babel/plugin-proposal-optional-chaining": "^7.18.9",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@types/jest": "^29.0.0",
    "@types/wordwrap": "github:types/wordwrap",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "assertron": "^10.0.0",
    "babel-jest": "^29.0.0",
    "clibuilder-plugin-dummy": "^1.0.1",
    "cross-env": "^7.0.3",
    "depcheck": "^1.4.3",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-harmony": "^7.1.0",
    "jest": "^29.0.0",
    "jest-validate": "^29.0.0",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config": "^2.0.1",
    "jest-watch-typeahead": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "satisfier": "^5.2.2",
    "tersify": "^3.10.2",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">= 14.16"
  }
}
