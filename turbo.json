{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "package.json",
        "tsconfig.*",
        ":(glob)ts/**/*.tsx?",
        ":(glob)!ts/**/*.spec.tsx?",
        ":(glob)!ts/**/*.stories.tsx?"
      ],
      "outputs": [
        "esm/**"
      ]
    },
    "clean": {
      "cache": false
    },
    "coverage": {
      "dependsOn": [
        "build"
      ],
      "inputs": [
        "package.json",
        "tsconfig.*",
        ":(glob)ts/**/*.tsx?"
      ],
      "outputs": [
        "coverage/**"
      ]
    },
    "depcheck": {
      "inputs": [
        "package.json",
        ":(glob)ts/**/*.tsx?"
      ]
    },
    "dev": {
      "cache": false
    },
    "lint": {
      "inputs": [
        ":(glob)ts/**/*.tsx?"
      ]
    },
    "size": {
      "dependsOn": [
        "build"
      ]
    },
    "test": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "package.json",
        "tsconfig.*",
        ":(glob)ts/**/*.tsx?"
      ]
    },
    "verify": {
      "cache": false
    },
    "watch": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "package.json",
        "tsconfig.*",
        ":(glob)ts/**/*.tsx?"
      ]
    }
  }
}
