{
  "name": "clibuilder",
  "version": "4.1.1",
  "description": "A CLI building library",
  "keywords": [
    "builder",
    "cli",
    "command",
    "parser"
  ],
  "homepage": "https://github.com/unional/clibuilder",
  "bugs": {
    "url": "https://github.com/unional/clibuilder/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unional/clibuilder.git"
  },
  "license": "MIT",
  "author": {
    "name": "Homa Wong (unional)",
    "email": "homawong@gmail.com",
    "url": "https://github.com/unional"
  },
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rimraf lib",
    "dc": "npm run dependency-check",
    "dependency-check": "dependency-check . --unused --no-dev -i @types/inquirer && dependency-check . --missing --no-dev",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --reporters=default",
    "verify": "npm run lint && npm run build && npm run dependency-check && jest --coverage",
    "verify:ci": "npm run lint && npm run build && npm run dependency-check && jest --runInBand --coverage --reporters=default",
    "watch": "jest --watch",
    "watch:type": "tsc --watch"
  },
  "dependencies": {
    "@types/inquirer": "6.5.0",
    "@unional/logging": "^1.0.3",
    "aurelia-logging-color": "^1.0.3",
    "camel-case": "^3.0.0",
    "find-installed-packages": "^2.0.0",
    "find-up": "^3.0.0",
    "inquirer": "^6.3.1",
    "lodash": "^4.17.11",
    "make-error": "^1.3.5",
    "pad-right": "^0.2.2",
    "search-packages": "^2.0.0",
    "type-plus": "^1.18.0",
    "wordwrap": "^1.0.0",
    "yargs-parser": "^10.1.0"
  },
  "devDependencies": {
    "@types/find-up": "^2.1.1",
    "@types/lodash": "^4.14.126",
    "@types/wordwrap": "github:types/wordwrap",
    "@types/yargs-parser": "^11.0.3",
    "@unional/devpkg-node": "^1.3.0",
    "assertron": "^7.0.1",
    "clibuilder-plugin-dummy": "^1.0.1"
  }
}
