{
  "name": "clibuilder",
  "version": "0.0.0-development",
  "description": "A CLI building library",
  "keywords": [
    "builder",
    "cli",
    "command",
    "parser"
  ],
  "homepage": "https://github.com/unional/clibuilder",
  "bugs": {
    "url": "https://github.com/unional/clibuilder/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unional/clibuilder.git"
  },
  "license": "MIT",
  "author": {
    "name": "Homa Wong (unional)",
    "email": "homawong@gmail.com",
    "url": "https://github.com/unional"
  },
  "sideEffects": false,
  "main": "lib/index.js",
  "module": "libm/index.js",
  "jsnext:main": "libm/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib",
    "libm"
  ],
  "scripts": {
    "build": "yarn build:libm && yarn build:lib",
    "build:lib": "tsc -p tsconfig.lib.json",
    "build:libm": "tsc -p tsconfig.libm.json",
    "build:watch": "tsc --watch",
    "clean": "rimraf .nyc_output .ts coverage lib libm",
    "coverage": "jest --coverage --maxWorkers=60%",
    "depcheck": "yarn dependency-check",
    "dependency-check": "dependency-check . --unused --no-dev -i global-store -i @types/node -i standard-log-color && dependency-check . --missing --no-dev",
    "lint": "eslint --ext=js,ts .",
    "nuke": "yarn clean && rimraf node_modules",
    "test": "jest --maxWorkers=60%",
    "test:watch": "jest --watch --maxWorkers=60%",
    "verify": "yarn lint && yarn build && yarn dependency-check && yarn coverage",
    "watch": "yarn test:watch"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "@types/node": "^8",
    "camel-case": "^4.1.1",
    "enquirer": "^2.3.5",
    "find-installed-packages": "^2.1.6",
    "find-up": "^4.1.0",
    "global-store": "^1.0.0-beta.15",
    "iso-error": "^3.2.5",
    "pad-right": "^0.2.2",
    "search-packages": "^2.0.0",
    "standard-log": "^4.1.2",
    "standard-log-color": "^1.5.19",
    "tslib": "^2.0.0",
    "type-plus": "^1.35.1",
    "wordwrap": "^1.0.0",
    "yargs-parser": "^17.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.8.3",
    "@babel/plugin-proposal-optional-chaining": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-typescript": "^7.9.0",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/wordwrap": "github:types/wordwrap",
    "@types/yargs-parser": "^15.0.0",
    "@unional/devpkg-node": "^1.5.0",
    "assertron": "^7.1.3",
    "babel-jest": "^25.4.0",
    "chalk": "^4.0.0",
    "clibuilder-plugin-dummy": "^1.0.1",
    "commitlint-circle": "^1.0.0",
    "husky": "^4.2.5",
    "satisfier": "^5.1.0",
    "semantic-release": "^17.0.7"
  },
  "engines": {
    "node": ">= 8"
  }
}
