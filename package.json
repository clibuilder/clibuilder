{
  "name": "clibuilder",
  "version": "0.6.3",
  "description": "A CLI building library",
  "main": "dist-es5/index.js",
  "module": "dist-es2015/index.js",
  "typings": "dist-es5/index.d.ts",
  "files": [
    "dist-es5",
    "dist-es2015"
  ],
  "scripts": {
    "build": "npm run clean && npm run build-es5 && npm run build-es2015",
    "build-es2015": "tsc -p tsconfig.es2015.json",
    "build-es5": "tsc -p tsconfig.es5.json",
    "clean": "rimraf dist-es5 dist-es2015",
    "dc": "npm run dependency-check",
    "dependency-check": "dependency-check . --unused --no-dev && dependency-check . --missing --no-dev",
    "lint": "tslint \"src/**/*.ts\"",
    "prepare": "typings i && npm run build",
    "postpublish": "git push",
    "preversion": "git pull && npm run verify",
    "verify": "npm run lint && npm run coverage && npm run dependency-check",
    "coverage": "nyc --check-coverage --branches 85 --functions 85 --lines 85 npm test",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "test": "jest",
    "watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unional/clibuilder.git"
  },
  "keywords": [
    "cli",
    "builder",
    "command",
    "parser"
  ],
  "author": {
    "name": "Homa Wong",
    "email": "homawong@gmail.com",
    "url": "https://github.com/unional"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/unional/clibuilder/issues"
  },
  "homepage": "https://github.com/unional/clibuilder#readme",
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "ava": {
    "files": [
      "dist-es5/**/*.spec.js"
    ],
    "source": [
      "scripts/*.js",
      "dist-es5/**/*.js",
      "*.json"
    ],
    "require": [
      "./scripts/setup-test-env.js"
    ]
  },
  "nyc": {
    "exclude": [
      "scripts",
      "**/*.spec.*",
      "**/fixtures/**/*"
    ]
  },
  "dependencies": {
    "aurelia-logging": "^1.3.1",
    "aurelia-logging-color": "^0.5.2",
    "camel-case": "^3.0.0",
    "lodash.merge": "^4.6.0",
    "minimist": "^1.2.0",
    "wordwrap": "^1.0.0"
  },
  "devDependencies": {
    "@types/jest": "^19.2.2",
    "@types/minimist": "^1.2.0",
    "@types/node": "^7.0.12",
    "aurelia-logging-memory": "^0.2.0",
    "ava": "^0.17.0",
    "dependency-check": "^2.6.0",
    "jest": "^19.0.2",
    "rimraf": "^2.5.4",
    "ts-jest": "^19.0.8",
    "tslint": "^5.0.0",
    "tslint-config-unional": "^0.8.0",
    "typescript": "^2.3.0-dev.20170422",
    "typings": "^2.0.0"
  }
}
