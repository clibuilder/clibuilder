{
  "name": "clibuilder",
  "version": "0.0.0-development",
  "description": "A CLI building library",
  "keywords": [
    "builder",
    "cli",
    "command",
    "parser"
  ],
  "homepage": "https://github.com/unional/clibuilder",
  "bugs": {
    "url": "https://github.com/unional/clibuilder/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unional/clibuilder.git"
  },
  "license": "MIT",
  "author": {
    "name": "Homa Wong (unional)",
    "email": "homawong@gmail.com",
    "url": "https://github.com/unional"
  },
  "sideEffects": false,
  "type": "commonjs",
  "exports": {
    ".": {
      "import": "./libm/index.js",
      "require": "./lib/index.js"
    }
  },
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib",
    "libm",
    "src"
  ],
  "scripts": {
    "build": "yarn build:libm && yarn build:lib",
    "build:lib": "tsc -p tsconfig.lib.json",
    "build:libm": "tsc -p tsconfig.libm.json",
    "build:watch": "tsc --watch",
    "clean": "rimraf .nyc_output .ts coverage lib libm",
    "coverage": "jest --coverage --maxWorkers=60%",
    "cs": "changeset",
    "depcheck": "depcheck",
    "lint": "eslint --ext=js,ts .",
    "nuke": "yarn clean && rimraf node_modules",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --endable",
    "test": "jest --maxWorkers=60%",
    "test:watch": "jest --watch --maxWorkers=60%",
    "verify": "npm-run-all clean -p build lint coverage depcheck",
    "watch": "yarn test:watch"
  },
  "dependencies": {
    "@types/node": "^14",
    "chalk": "^4.1.0",
    "find-installed-packages": "^2.1.6",
    "find-up": "^5.0.0",
    "global-store": "^1.0.0-beta.17",
    "pad-right": "^0.2.2",
    "search-packages": "^2.1.0",
    "standard-log": "^5.4.0",
    "standard-log-color": "^2.1.0",
    "tslib": "^2.1.0",
    "type-plus": "^3.13.1",
    "wordwrap": "^1.0.0",
    "zod": "^3.11.6"
  },
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.12.13",
    "@babel/plugin-proposal-optional-chaining": "^7.12.16",
    "@babel/preset-env": "^7.12.16",
    "@babel/preset-typescript": "^7.12.16",
    "@changesets/cli": "^2.22.0",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jest": "^26.0.20",
    "@types/wordwrap": "github:types/wordwrap",
    "@typescript-eslint/parser": "^4.15.0",
    "assertron": "^7.1.3",
    "babel-jest": "^26.6.3",
    "clibuilder-plugin-dummy": "^1.0.1",
    "depcheck": "^1.4.3",
    "eslint": "^7.19.0",
    "eslint-plugin-harmony": "^5.0.2",
    "husky": "^8.0.1",
    "jest": "^26.6.3",
    "jest-validate": "^26.6.2",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config": "^2.0.1",
    "jest-watch-typeahead": "^0.6.1",
    "npm-run-all": "^4.1.5",
    "pinst": "^3.0.0",
    "rimraf": "^3.0.2",
    "satisfier": "^5.1.0",
    "tersify": "^3.7.8",
    "typescript": "^4.1.5"
  },
  "packageManager": "yarn@3.2.1",
  "engines": {
    "node": ">= 8"
  }
}
